= form_for @period do |f|
  = f.error_messages
  %p
    = f.label :start
    %br
    = f.text_field :start, class: 'horaries', autofocus: true
  %p
    = f.label :finish
    %br
    = f.text_field :finish, class: 'horaries'
  %p
    = f.label :day
    %br
    = l @period.day, format: :long if @period.day
    = f.hidden_field :day
  %p= f.submit
