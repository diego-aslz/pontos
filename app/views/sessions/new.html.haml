- title t(:'helpers.titles.login')

%p
  = t(:'helpers.messages.no_account')
  = link_to t(:'helpers.links.sign_up'), signup_path

= form_tag sessions_path do
  %p
    = label_tag :login, User.human_attribute_name(:login)
    %br
    = text_field_tag :login, params[:login]
  %p
    = label_tag :password, User.human_attribute_name(:password)
    %br
    = password_field_tag :password
  %p
    = submit_tag t(:'helpers.links.login')
